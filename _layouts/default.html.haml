---
layout: base
---

#nav-wrapper
  = partial( 'top-nav.html.haml' )

#header-bar
  #header-wrapper
    #header
      #logos
        %a{:href=>'/'}
          %img#project-logo{ :src=>'/images/logo.png' }
#primary-wrapper
  #primary-container
    - unless page.inhibit_title 
      %h1.page-title
        - if page.section 
          %a{:href=>"/#{page.section.downcase}/"} #{page.section}
          \:
        #{page.title}
    #primary-content
      ~ content
#footer-bar
  #footer-wrapper
    #footer
      #bottom-nav
        = partial( 'bottom-nav.html.haml' )
        #bottom-right
          #legal
            The #{site.title} project is a member of the 
            <a href="http://jboss.org/">JBoss Community</a> and
            produced by <a href="http://projectodd.org/">ProjectOdd</a>.
            Copyright 2009-2010 <a href="http://redhat.com/">Red Hat, Inc.</a>
            #{site.title} is a trademark of Red Hat, Inc.
          #badges
            %a{:href=>'http://jboss.org/'}
              %img#jbosscommunity-logo{ :src=>'/images/jbosscommunity-logo.png' }
            %a{:href=>'http://projectodd.org/'}
              %img#projectodd-logo{ :src=>'/images/projectodd-logo.png' }
